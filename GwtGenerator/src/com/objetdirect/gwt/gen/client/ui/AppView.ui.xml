<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header {
			margin-top: 8px;
			background:#d0ffb0; 
			-moz-border-radius:12px; 
			-webkit-border-radius:12px;
			position: absolute;
			left: 0.8%;
			right: 0.8%;
			padding: 14px;
		}
		
		.horizontal-left {
			float: left;
			padding-left: 15px;
			font-size : 120%;
		}
		
		.horizontal-right {
			float: right;
			padding-right: 15px;
		}
		
		.westPanel {
			border: 5px solid #FFE49C;
			-moz-border-radius: 10px; 
			-webkit-border-radius: 10px;
			margin-left : 10px;
			margin-right : 10px;
			padding : 5px;
			overflow: auto;
		}
		
		.border {
			border-style:solid;
			border-width:1px;
		}
	</ui:style>
	<g:DockLayoutPanel unit='PX' height="100%" width="100%">
	   	<g:north size='58'>
	     	<g:HTMLPanel>
	     		<div class='{style.header}'>
					<div class='{style.horizontal-left}'>Welcome <g:InlineHTML ui:field="nameValue"/>.</div>
					<div class='{style.horizontal-right}'><g:Anchor ui:field="signOut">Sign out</g:Anchor></div>
	     		</div>
			</g:HTMLPanel>
   		</g:north>
   		
		<g:center>
			<g:SplitLayoutPanel>
				<g:west size="200">
					<g:FlowPanel ui:field="westPanel" addStyleNames ="{style.westPanel}"/>
				</g:west>
				<g:center>
					<g:LayoutPanel ui:field="content" />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
		<g:south size="8">
			<g:HTMLPanel></g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 