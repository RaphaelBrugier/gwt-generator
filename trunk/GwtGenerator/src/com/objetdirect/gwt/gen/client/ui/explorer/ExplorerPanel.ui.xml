<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header {
			margin-top: 18px;
			background:#d0ffb0; 
			-moz-border-radius:12px; 
			-webkit-border-radius:12px;
			position: absolute;
			left: 0.8%;
			right: 0.8%;
			padding: 20px;
		}
		
		.horizontal-left {
			float: left;
			padding-left: 15px;
			font-size : 120%;
		}
		
		.horizontal-right {
			float: right;
			padding-right: 15px;
		}
		
		.westPanel {
			border: 5px solid #FFE49C;
			-moz-border-radius: 10px; 
			-webkit-border-radius: 10px;
			margin : 10px;
			padding : 5px;
		}
		
		.contentPanel {
			border: 5px solid #DCE9F2;
			-moz-border-radius: 10px; 
			-webkit-border-radius: 10px;
			margin : 10px;
			padding : 5px;
		}
		
		.border {
			border-style:solid;
			border-width:1px;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM' height="100%" width="100%">
	   	<g:north size='7'>
	     	<g:HTMLPanel>
	     		<div class='{style.header}'>
					<div class='{style.horizontal-left}'>Welcome <span ui:field="nameSpan"/>.</div>
					<div class='{style.horizontal-right}'><g:Anchor ui:field="signOut">Sign out</g:Anchor></div>
	     		</div>
			</g:HTMLPanel>
   		</g:north>
   		
   		<g:west size='20'>
			<g:FlowPanel ui:field="westPanel" addStyleNames ="{style.westPanel}"/>
	   	</g:west>
   		
		<g:center>
			<g:FlowPanel ui:field="content" addStyleNames ="{style.contentPanel}"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 