<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style field="baseStyle" src="resources/base.css" type="com.objetdirect.gwt.gen.client.ui.resources.BaseCss">
		.button {
			margin-right : 15px;
		}
		
		.buttonInactive {
			margin-right : 15px;
		}
	</ui:style>
	<ui:style src="resources/base.css">
		.page {
			background-color: color4;
		}
		
		.header {
			margin-top: 8px;
			background: color5;
			-moz-border-radius:12px; 
			-webkit-border-radius:12px;
			position: absolute;
			left: 0.8%;
			right: 0.8%;
			padding: 12px;
		}
		
		.signOut {
			padding-right: 15px;
		}
		
		.westPanel {
			border: 5px solid color5;
			-moz-border-radius: 10px; 
			-webkit-border-radius: 10px;
			margin-left : 0px;
			margin-right : 10px;
			padding : 5px;
			overflow: auto;
			background-color: color5;
		}
	</ui:style>
	<g:LayoutPanel addStyleNames="{style.page}">
	<g:layer>
	<g:DockLayoutPanel unit='PX' height="100%" width="100%">
	   	<g:north size='58'>
	     	<g:HTMLPanel>
	     		<div class='{style.header}'>
	     			<g:Anchor ui:field="newProject" addStyleNames='{baseStyle.button}'>New project</g:Anchor>
	     			<g:Anchor ui:field="save">Save</g:Anchor>
	     			<g:Anchor ui:field="generate">Generate</g:Anchor>
					<g:Anchor ui:field="signOut" addStyleNames='{baseStyle.button} {style.alignRight}'>Log out</g:Anchor>
	     		</div>
			</g:HTMLPanel>
   		</g:north>
   		
		<g:center>
			<g:SplitLayoutPanel ui:field="splitPanel">
				<g:west size="300">
					<g:FlowPanel ui:field="westPanel"/>
				</g:west>
				<g:center>
					<g:LayoutPanel ui:field="content"/>
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
		<g:south size="8">
			<g:HTMLPanel></g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
	</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 