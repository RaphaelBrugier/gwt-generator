<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='images' type='com.objetdirect.gwt.gen.client.ui.resources.ImageResources'/>
	
	<ui:style>
		
		.content {
			background-image: url(images/background.png);
			background-repeat: repeat;
			height: 100%;
			text-align: center;
		}
		
		.text {
			font-weight: bold;
			font-size: x-large;
			padding-top: 50px;
		}
		
		.image {
			padding-top: 50px;
		}

	</ui:style>
	
	<g:HTMLPanel>
		<div class='{style.content}'>
			<div class='{style.image}'>
				<g:Image  resource='{images.GwtGeneratorLogo}'/>
			</div>
			<div class='{style.text}'>
				Welcome to the gwt-generator project, please <g:Anchor ui:field="signIn">login</g:Anchor> with a Google account to continue.
			</div> 
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 